APP_NAME=Laravel
APP_ENV=testing
APP_KEY=base64:YOUR_TESTING_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=null
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
DB_DATABASE=:memory:

BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# N8n Configuration
# For Laravel to authenticate to n8n's trigger webhook
N8N_TRIGGER_WEBHOOK_URL=http://n8n.test/webhook/ad-script-refactor-openrouter
N8N_AUTH_HEADER_KEY=X-Laravel-Trigger-Auth
N8N_AUTH_HEADER_VALUE=your-test-auth-value-here

# For Laravel to verify HMAC signatures from n8n callbacks
N8N_CALLBACK_HMAC_SECRET=your-test-hmac-secret-here
